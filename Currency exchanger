static void Main(string[] args)
        {
            float countRub = 1000;
            float countUsd = 25;
            float countUk = 700;
            float rubToUsd = 0.01f, rubToUk = 0.36f;
            float usdToRub = 69f,  usdToUk = 27.6f;
            float ukToRub = 2.5f,  ukToUsd = 0.04f;
            int currencySelection;
            int exchangeTo;
            float amountMoneyChange;
           
            Console.WriteLine("Мы рады приветствовать вас в нашем обменнике валют!");
            Console.WriteLine($"Ваш баланс:  {countRub} Рублей {countUsd} Долларов {countUk} Гривен");
            Console.WriteLine("Пожалуйста,укажите валюту которую вы хотите обменять?");
            Console.WriteLine("Рубли: Нажмите 1 ");
            Console.WriteLine("Доллары: Нажмите 2 ");
            Console.WriteLine("Гривны: Нажмите 3 ");
            currencySelection = Convert.ToInt32(Console.ReadLine());
            switch (currencySelection)
            {
                case 1:
                Console.WriteLine("Укажите на какую валюту вы хотите обменять?");
                Console.WriteLine("Доллары: Нажмите 1 ");
                Console.WriteLine("Гривны: Нажмите 2 ");
                exchangeTo = Convert.ToInt32(Console.ReadLine());
                if(exchangeTo == 1)
                {
                Console.WriteLine("Укажите количество Рублей на обмен? ");
                amountMoneyChange = Convert.ToSingle(Console.ReadLine());
                countRub -= amountMoneyChange;
                countUsd += amountMoneyChange *  rubToUsd;
                Console.WriteLine($"На вашем счету Рублей {countRub}  Долларов {countUsd} ");
                Console.WriteLine("Для выхода нажмите любую клавишу!");
                }else if(exchangeTo == 2)
                {
                Console.WriteLine("Укажите количество Рублей на обмен? ");
                amountMoneyChange = Convert.ToSingle(Console.ReadLine());
                countRub -= amountMoneyChange;
                countUk += amountMoneyChange * rubToUk;
                Console.WriteLine($"На вашем счету Рублей {countRub}  Гривен {countUk} ");
                Console.WriteLine("Для выхода нажмите любую клавишу!");
                }
                else
                {
                Console.WriteLine("Неверный ввод! ");
                }
                break;
                case 2:
                Console.WriteLine("Укажите на какую валюту вы хотите обменять?");
                Console.WriteLine("Рубли: Нажмите 1 ");
                Console.WriteLine("Гривны: Нажмите 2 ");
                exchangeTo = Convert.ToInt32(Console.ReadLine());
                if (exchangeTo == 1)
                {
                Console.WriteLine("Укажите количество Доллраво на обмен? ");
                amountMoneyChange = Convert.ToSingle(Console.ReadLine());
                countUsd -= amountMoneyChange;
                countRub += amountMoneyChange * usdToRub;
                Console.WriteLine($"На вашем счету Долларов {countUsd}  Долларов {countRub} ");
                Console.WriteLine("Для выхода нажмите любую клавишу!");
                }
                else if (exchangeTo == 2)
                {
                Console.WriteLine("Укажите количество Доллраво на обмен? ");
                amountMoneyChange = Convert.ToSingle(Console.ReadLine());
                countUsd -= amountMoneyChange;
                countRub += amountMoneyChange * usdToUk;
                Console.WriteLine($"На вашем счету Долларов {countUsd}  Гривен {countRub} ");
                Console.WriteLine("Для выхода нажмите любую клавишу!");
                }
                else
                {
                Console.WriteLine("Неверный ввод! ");
                }
                break;
                case 3:
                Console.WriteLine("Укажите на какую валюту вы хотите обменять?");
                Console.WriteLine("Рубли: Нажмите 1 ");
                Console.WriteLine("Долары: Нажмите 2 ");
                exchangeTo = Convert.ToInt32(Console.ReadLine());
                if (exchangeTo == 1)
                {
                Console.WriteLine("Укажите количество Гривен на обмен? ");
                amountMoneyChange = Convert.ToSingle(Console.ReadLine());
                countUk -= amountMoneyChange;
                countRub += amountMoneyChange * ukToRub;
                Console.WriteLine($"На вашем счету Гривен {countUk}  Долларов {countRub} ");
                Console.WriteLine("Для выхода нажмите любую клавишу!");
                }
                else if (exchangeTo == 2)
                {
                Console.WriteLine("Укажите количество Гривен на обмен? ");
                amountMoneyChange = Convert.ToSingle(Console.ReadLine());
                countUk -= amountMoneyChange;
                countUsd += amountMoneyChange * ukToUsd;
                Console.WriteLine($"На вашем счету Гривен {countUk}  Гривен {countUsd} ");
                Console.WriteLine("Для выхода нажмите любую клавишу!");
                }
                else
                {
                Console.WriteLine("Неверный ввод! ");
                }
                break;
                default:
                Console.WriteLine("Неверный ввод! ");
                break;
            }
        }
