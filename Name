static void Main(string[] args)
        {
            string userName ;
            char userChar ;
            int widthLine = 6;
            int amountLine = 3;


            Console.WriteLine("Введите имя?");
            userName = Console.ReadLine();
            Console.WriteLine("Знак");
            userChar = Convert.ToChar(Console.ReadLine());

            for (int i = 0; i < amountLine;i++)
            {
                if (i != 1)
                {
                    for (int j = 0; j < widthLine; j++)
                    {
                        Console.Write(userChar);
                    }
                }
                if(i == 1)
                {
                    Console.Write(userChar + userName + userChar);
                }
                Console.WriteLine();
            }
           
            Console.ReadKey();
        }
