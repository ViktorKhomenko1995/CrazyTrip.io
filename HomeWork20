static void Main(string[] args)
        {
            int health = 10;
            int maxHealth = 10;

            while (true)
            {
                HealthBar(health, maxHealth, ConsoleColor.Red);
                Console.SetCursorPosition(0, 7);
                Console.Write($"Количество жизней: {health}");
                Console.SetCursorPosition(0, 5);
                Console.Write("Отнемите или добавте количестиво жизней:");
                health += Convert.ToInt32(Console.ReadLine());
                Console.Clear();
            }         

        }

        static void HealthBar(int health, int maxHealth, ConsoleColor color, char symbo = ' ')
        {
            if(health > 6)
            {
                ConsoleColor deafultColor = Console.BackgroundColor;
                string bar = "";

                for (int i = 0; i < health; i++)
                {
                    bar += " ";
                }
                Console.SetCursorPosition(0, 0);
                Console.Write("[");
                Console.BackgroundColor = color;
                Console.Write(bar);
                Console.BackgroundColor = deafultColor;

                bar = "";

                for (int i = health; i < maxHealth; i++)
                {
                    bar += " ";
                }
                Console.Write(bar + "]");
            }
            else
            {
                string bar = "";

                for (int i = 0; i < health; i++)
                {
                    bar += "#";
                }
                Console.SetCursorPosition(0, 0);
                Console.Write("[");
                Console.Write(bar);

                bar = "";

                for (int i = health; i < maxHealth; i++)
                {
                    bar += "_";
                }
                Console.Write(bar + "]");
            }
           
        }
