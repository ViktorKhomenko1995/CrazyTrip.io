       static void Main(string[] args)
        {

            bool isOpen = true;
            int userNumber = 0;

            GetNumber(  userNumber, ref isOpen);
            

        }
        static void GetNumber(  int userNumber, ref bool isOPen)
        {
            while (isOPen)
            {
                
                string userActions;
                ConsoleColor deafaultColor = Console.ForegroundColor;
                Console.WriteLine("Введите число:");
                userActions = Console.ReadLine();
                Console.Clear();

                if (int.TryParse(userActions, out userNumber))
                {
                   
                    Console.WriteLine($"Ваше число: " + userNumber);
                    isOPen = false;

                }
                else
                {
                    Console.ForegroundColor = ConsoleColor.Red;
                    Console.WriteLine("Не верно!");
                    Console.ForegroundColor = deafaultColor;
                }
               
            }

           

        }
