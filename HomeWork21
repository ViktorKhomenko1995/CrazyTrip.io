        static void Main(string[] args)
        {
            bool isOpen = true;
            string userComando = "";
            int userNumber;

            while (isOpen)
            {
                GetNumber( userComando, out userNumber, ref isOpen);

            }
            
        }
        static int GetNumber(  string userCommando, out int userNumber, ref bool isOPen)
        {
            ConsoleColor deafaultColor = Console.ForegroundColor;
            Console.WriteLine("Введите число:");
            userCommando = Console.ReadLine();
            Console.Clear();

            if (int.TryParse(userCommando,out userNumber))
            {
                Console.WriteLine($"Ваше число: " + userNumber);
                isOPen = false;                            
              
            }
            else
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("Не верно!");
                Console.ForegroundColor = deafaultColor;
            }
            return userNumber;

        }
