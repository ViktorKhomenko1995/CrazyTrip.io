static void Main(string[] args)
        {
            string secretWord = "Exit";
            string inputUserWord;

            Console.WriteLine("Вы не сможете выбраться с этой комнаты,до тех пор пока не отдгадете пароль!");

            while (true)
            {
             
                Console.Write("Введите пароль: ");
                inputUserWord = Console.ReadLine();

                if (inputUserWord == secretWord)
                {
                    Console.WriteLine("Выход открыт,ты смог угадать секретный пароль!"); 
                    Console.ReadKey();
                    break;
                }
                else
                {
                    Console.Write("Неверно,попробуй еще! ");
                    
                }

            }
