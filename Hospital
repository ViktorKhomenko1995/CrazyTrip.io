 static void Main(string[] args)
        {


            int countVisitors;
            int timeSurvey = 10;

            int time;
            int chas;
            int minutes;



            Console.Write("Укажите количество людей в очереди");
            countVisitors = Convert.ToInt32(Console.ReadLine());


            time = countVisitors * timeSurvey;
            chas = time / 60;
            minutes = time % 60;

            Console.WriteLine($"Ваша очередь наступит через: {chas} Часа {minutes} Минут");
           


        }
