class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player();
            player.ShowInfoPlayer();
            Console.ReadKey();

        }

        class Player
        {
            private string _namePlayer;
            private int _level;
            private int _damage;
            private int _armor;
            private int _speed;


            public Player()
            {
                _namePlayer = "Viktor";
                _level = 99;
                _damage = 270;
                _armor = 190;
                _speed = 45;
            }

            public void ShowInfoPlayer()
            {
                Console.WriteLine($"Имя игрока: {_namePlayer}.\nУровень игрока: {_level}.\nУрон игрока: {_damage}.\nЗащита игока: {_armor}.\nСкорость игрока: {_speed}.");
            }
        }

    }
