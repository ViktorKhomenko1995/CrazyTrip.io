static void Main(string[] args)
        {
            int[] array = new int[30];
            Random rand = new Random();
            int maxValue;

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = rand.Next(0, 100);
                if(array[i] > array[i]-1 && array[i] < array[i] + 1)
                {
                    maxValue = array[i];
                    Console.Write(maxValue + " ");
                }            
            }   
        }
