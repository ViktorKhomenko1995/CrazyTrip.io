static void Main(string[] args)
        {
            string secretWord = "Exit";
            string inputUserWord;
            bool isOpenDoor = false;

            Console.WriteLine("Вы не сможете выбраться из этой комнаты,до тех пор пока не  отгадаете пароль!!");
            while(isOpenDoor == false)
            {
                Console.Write("Введите пароль: ");
                inputUserWord = Console.ReadLine();
                if(inputUserWord == secretWord)
                {
                    Console.WriteLine("Поздравляю,вы угадали пароль,и теперь вы можете быть свободны!");
                    isOpenDoor = true;
                }
                else
                {
                    Console.Write("Пароль неверный! ");
                }
                
            }

        }
